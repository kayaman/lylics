---
export const prerender = true;

export function getStaticPaths() {
	return [
		//
		'redoc',
		'swagger',
	].map((docs) => ({ params: { docs } }));
}

const { docs } = Astro.params;
---

<iframe src={`/api-docs/${docs}`} slot="content" allowfullscreen></iframe>

<style>
  iframe {
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
}
</style>